<p>Bem-vindo ao maior livro de receitas online</p>

<% if current_user && current_user.admin? %>
  <%= link_to 'Cadastrar Tipo de Receita', new_recipe_type_path %>
  <%= link_to 'Cadastrar Cozinha', new_cuisine_path %>
  <%= link_to 'Receitas Pendentes', pending_recipes_path %>
<% end %>

<p>Pesquisar por:</p>
<% if current_user %>
  <%= link_to 'Tipos de Receitas', my_recipe_types_path %>
  <%= link_to 'Cozinhas', my_cuisines_path %>
<% end %>

<% @recipe.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min%></li>
  </ul>
<% end %>
